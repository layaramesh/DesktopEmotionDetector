<Window x:Class="EmotionInstructor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Emotion Detection - Student Help Monitor" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
            <Button x:Name="StartButton" Content="Start Monitoring" Width="150" Height="40" 
                    FontSize="14" FontWeight="Bold" Click="StartButton_Click"
                    Background="#4CAF50" Foreground="White" BorderThickness="0" Cursor="Hand"/>
            <Button x:Name="StopButton" Content="Stop Monitoring" Width="150" Height="40" 
                    FontSize="14" FontWeight="Bold" Click="StopButton_Click" Margin="10,0,0,0"
                    Background="#f44336" Foreground="White" BorderThickness="0" Cursor="Hand" IsEnabled="False"/>
            <Button x:Name="ClearButton" Content="Clear Data" Width="120" Height="40"
            FontSize="13" FontWeight="Bold" Click="ClearButton_Click" Margin="6,0,0,0"
                Background="#9E9E9E" Foreground="White" BorderThickness="0" Cursor="Hand"/>
            <Button x:Name="StopFlashButton" Content="Stop Flashing" Width="140" Height="40"
            FontSize="13" FontWeight="Bold" Click="StopFlashButton_Click" IsEnabled="False" Margin="6,0,0,0"
                Background="#FF9800" Foreground="White" BorderThickness="0" Cursor="Hand"/>
            <Button x:Name="DetailLoggingButton" Content="Enable Detailed Log" Width="160" Height="40"
                FontSize="13" FontWeight="Bold" Click="DetailLoggingButton_Click" Margin="6,0,0,0"
                Background="#3F51B5" Foreground="White" BorderThickness="0" Cursor="Hand"/>
            <TextBlock x:Name="StatusText" Text="Status: Stopped" VerticalAlignment="Center" 
                       Margin="20,0,0,0" FontSize="14" FontWeight="Bold"/>
            <TextBlock x:Name="FaceCountText" Text="Faces Detected: 0" VerticalAlignment="Center" 
                       Margin="20,0,0,0" FontSize="14" FontWeight="Bold" Foreground="#2196F3"/>
        </StackPanel>

        <!-- Info Panel -->
        <Border Grid.Row="1" Background="#E3F2FD" Padding="10" Margin="0,0,0,10" CornerRadius="5">
            <StackPanel>
                <TextBlock TextWrapping="Wrap" FontSize="12">
                    <Run Text="Monitoring every 5 seconds. " FontWeight="Bold"/>
                    <Run Text="Hybrid Model: Uses emotion-ferplus-8 for Happy/Neutral (Proceed Ahead), emotion_cnn for other emotions (Needs Help)."/>
                </TextBlock>
                <Border x:Name="AlertBorder" Background="#FFCDD2" BorderBrush="#f44336" BorderThickness="1" CornerRadius="4"
                        Padding="8" Margin="0,10,0,0" Visibility="Collapsed">
                    <TextBlock x:Name="AlertText" Text="ALERT: Multiple students may need help" 
                               FontSize="14" FontWeight="Bold" Foreground="#B71C1C"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Data Log Table -->
        <Border Grid.Row="2" BorderBrush="#BDBDBD" BorderThickness="1" CornerRadius="5">
            <DataGrid x:Name="LogDataGrid" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      AlternatingRowBackground="#F5F5F5"
                      GridLinesVisibility="All"
                      HeadersVisibility="All"
                      CanUserResizeRows="False"
                      CanUserSortColumns="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="140"/>
                    <DataGridTextColumn Header="Face ID" Binding="{Binding FaceId}" Width="80"/>
                    <DataGridTextColumn x:Name="CnnColumn" Header="CNN Emotion" Binding="{Binding CnnEmotion}" Width="120"/>
                    <DataGridTextColumn x:Name="FerPlusColumn" Header="FerPlus Emotion" Binding="{Binding FerPlusEmotion}" Width="140"/>
                    <DataGridTextColumn x:Name="SelectedModelColumn" Header="Selected Model" Binding="{Binding SelectedModel}" Width="120"/>
                    <DataGridTextColumn x:Name="FinalEmotionColumn" Header="Final Emotion" Binding="{Binding FinalEmotion}" Width="120"/>
                    <DataGridTextColumn Header="Classification" Binding="{Binding Classification}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="Needs Help">
                                        <Setter Property="Foreground" Value="#f44336"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="Proceed Ahead">
                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
